@model IEnumerable<OrdemServicoApp.Models.OrdemServico>
@{
    ViewData["Title"] = "Ordens de Serviço";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Ordens de Serviço</h2>
    <form class="d-flex" method="get" asp-action="Index">
        <input class="form-control me-2" type="search" name="q" placeholder="Pesquisar (cliente, veículo, placa)" value="@ViewBag.Query" />
        <button class="btn btn-outline-light" type="submit">Pesquisar</button>
    </form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Cliente</th>
            <th>Veículo</th>
            <th>Placa</th>
            <th>Entrada</th>
            <th>Status</th>
            <th>Valor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Cliente</td>
            <td>@item.Veiculo</td>
            <td>@item.Placa</td>
            <td>@item.DataEntrada.ToString("dd/MM/yyyy")</td>
            <td><status-badge status="@item.Status"></status-badge></td>
            <td>@item.Valor.ToString("C")</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Criar nova ordem</a>
