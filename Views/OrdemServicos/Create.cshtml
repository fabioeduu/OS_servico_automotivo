@model OrdemServicoApp.Models.OrdemServico
@{
    ViewData["Title"] = "Criar Ordem";
}

<h2>Criar Ordem de Serviço</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <input class="form-control" asp-for="Cliente" />
        <span class="text-danger" asp-validation-for="Cliente"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Veículo</label>
        <input class="form-control" asp-for="Veiculo" />
        <span class="text-danger" asp-validation-for="Veiculo"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Placa</label>
        <input class="form-control" asp-for="Placa" />
    </div>
    <div class="mb-3">
        <label class="form-label">Data de Entrada</label>
        <input class="form-control" asp-for="DataEntrada" type="date" />
    </div>
    <div class="mb-3">
        <label class="form-label">Status</label>
        <select class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<OrdemServicoApp.Models.StatusOrdem>()"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea class="form-control" asp-for="Descricao"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Valor</label>
        <input class="form-control" asp-for="Valor" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label class="form-label">Técnico</label>
        <input class="form-control" asp-for="Tecnico" />
    </div>
    <div class="mb-3">
        <label class="form-label">Observações</label>
        <textarea class="form-control" asp-for="Observacoes"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

<partial name="_ValidationScriptsPartial" />
