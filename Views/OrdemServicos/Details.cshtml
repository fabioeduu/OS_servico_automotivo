@model OrdemServicoApp.Models.OrdemServico
@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes da Ordem</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Cliente</dt>
    <dd class="col-sm-10">@Model.Cliente</dd>

    <dt class="col-sm-2">Veículo</dt>
    <dd class="col-sm-10">@Model.Veiculo</dd>

    <dt class="col-sm-2">Placa</dt>
    <dd class="col-sm-10">@Model.Placa</dd>

    <dt class="col-sm-2">Entrada</dt>
    <dd class="col-sm-10">@Model.DataEntrada.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Saída</dt>
    <dd class="col-sm-10">@(Model.DataSaida?.ToString("dd/MM/yyyy") ?? "-")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10"><status-badge status="@Model.Status"></status-badge></dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Valor</dt>
    <dd class="col-sm-10">@Model.Valor.ToString("C")</dd>

    <dt class="col-sm-2">Técnico</dt>
    <dd class="col-sm-10">@Model.Tecnico</dd>

    <dt class="col-sm-2">Observações</dt>
    <dd class="col-sm-10">@Model.Observacoes</dd>
</dl>

<a class="btn btn-secondary" asp-action="Index">Voltar</a>
<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
